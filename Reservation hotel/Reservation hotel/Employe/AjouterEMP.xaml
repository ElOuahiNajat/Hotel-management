<Window x:Class="Reservation_hotel.Employe.AjouterEMP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reservation_hotel.Employe"
        mc:Ignorable="d"
        Title="Ajouter Employé" Height="450" Width="800"
        Background="Black">

	<!-- Grille principale avec un fond gris -->
	<Grid Background="#1e1e1e">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Champs de texte avec des marges et une hauteur définie -->
		<TextBox x:Name="txtnom" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,50,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>
		<TextBox x:Name="txtprenom" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,100,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>
		<TextBox x:Name="txttel" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,150,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>
		<TextBox x:Name="txtcin" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,200,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>
		<TextBox x:Name="txtsalaire" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,250,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>
		<TextBox x:Name="txtaccesCode" Height="40" Width="400" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,300,0,0" Background="#333333" Foreground="White" BorderBrush="Gray" BorderThickness="2" FontSize="16"/>

		<!-- Labels stylisés -->
		<Label Content="Nom :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,50,100,0" Foreground="White" FontSize="16"/>
		<Label Content="Prenom :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,100,100,0" Foreground="White" FontSize="16"/>
		<Label Content="Telephone :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,150,100,0" Foreground="White" FontSize="16"/>
		<Label Content="CIN :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,200,100,0" Foreground="White" FontSize="16"/>
		<Label Content="Salaire :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,250,100,0" Foreground="White" FontSize="16"/>
		<Label Content="AccesCode :" Grid.Column="0" HorizontalAlignment="Center" Margin="0,300,100,0" Foreground="White" FontSize="16"/>

		<!-- Bouton "Create" stylisé -->
		<Button x:Name="btnajout" Content="Create" Width="150" Height="50" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,360,0,0" Background="Yellow" Foreground="Black" FontSize="18" BorderBrush="Gray" BorderThickness="2" FontWeight="Bold" Cursor="Hand" Click="btnajout_Click"/>

	</Grid>
</Window>
