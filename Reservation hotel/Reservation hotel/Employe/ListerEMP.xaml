<Window x:Class="Reservation_hotel.Employe.ListerEMP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Employés" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<!-- Style pour les boutons -->
		<Style x:Key="ModernButtonStyle" TargetType="Button">
			<Setter Property="Width" Value="110"/>
			<Setter Property="Height" Value="35"/>
			<Setter Property="Background" Value="Black"/>
			<Setter Property="Foreground" Value="Yellow"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Margin" Value="5,0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="18">
							<ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="Yellow"/>
					<Setter Property="Foreground" Value="Black"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Style pour la barre de recherche -->
		<Style x:Key="SearchBoxStyle" TargetType="TextBox">
			<Setter Property="Width" Value="300"/>
			<Setter Property="Height" Value="35"/>
			<Setter Property="Background" Value="Black"/>
			<Setter Property="Foreground" Value="White"/>
			<!-- Texte blanc -->
			<Setter Property="CaretBrush" Value="White"/>
			<!-- Curseur blanc -->
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderThickness="1"
                                BorderBrush="Yellow">
							<Grid>
								<TextBox Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Text, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White" 
								CaretBrush="White" 
								Padding="15,8"
								VerticalContentAlignment="Center"/>
							</Grid>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Style pour le DataGrid -->
		<Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="GridLinesVisibility" Value="None"/>
			<Setter Property="RowBackground" Value="White"/>
			<Setter Property="AlternatingRowBackground" Value="#f8f9fa"/>
			<Setter Property="HeadersVisibility" Value="Column"/>
			<Setter Property="RowHeight" Value="35"/>
			<Setter Property="FontSize" Value="13"/>
			<Style.Resources>
				<Style TargetType="DataGridColumnHeader">
					<Setter Property="Background" Value="Black"/>
					<Setter Property="Foreground" Value="Yellow"/>
					<Setter Property="Padding" Value="10,10"/>
					<Setter Property="BorderThickness" Value="0,0,1,0"/>
					<Setter Property="BorderBrush" Value="Yellow"/>
				</Style>
			</Style.Resources>
		</Style>
	</Window.Resources>

	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Border Background="Black"
                Padding="20"
                Grid.Row="0">
			<Grid>
				<StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Left">
					<Border Background="Yellow"
                            Width="35" Height="35"
                            CornerRadius="18"
                            Margin="0,0,10,0">
						<Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
      Fill="Black"
      Width="15"
      Height="15"
      Stretch="Uniform"
      Margin="10"/>

					</Border>
					<TextBox x:Name="txtsearchEMP"
                             Style="{StaticResource SearchBoxStyle}"
                             TextChanged="txtsearchEMP_TextChanged"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right">
					<Button Content="Ajouter" Style="{StaticResource ModernButtonStyle}" Click="Button_AddEmployee_Click"/>
					<Button Content="Modifier" Style="{StaticResource ModernButtonStyle}" Click="Button_ModifyEmployee_Click"/>
					<Button Content="Supprimer" Style="{StaticResource ModernButtonStyle}" Click="Button_Delete_Click"/>
					<Button x:Name="btnExport" Content="Exporter" Style="{StaticResource ModernButtonStyle}" Click="btnExport_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<DataGrid x:Name="dgvEMPliste"
                  Grid.Row="1"
                  Margin="20"
                  Style="{StaticResource ModernDataGridStyle}"
                  Loaded="dgvEMPliste_Loaded"/>
		
		
		

	
	</Grid>
</Window>
