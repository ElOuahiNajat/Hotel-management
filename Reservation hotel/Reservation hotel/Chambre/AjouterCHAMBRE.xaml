<Window x:Class="Reservation_hotel.Chambre.AjouterCHAMBRE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une Chambre" Height="300" Width="400"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Champ pour le numéro de chambre -->
        <Label Content="Numéro de Chambre :" Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,0" Foreground="White"/>
        <TextBox x:Name="txtNumeroChambre" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,10,0" Width="200" Background="Black" Foreground="White" BorderBrush="Yellow"/>

        <!-- Champ pour la disponibilité -->
        <Label Content="Disponibilité :" Grid.Row="1" HorizontalAlignment="Left" Margin="10,10,0,0" Foreground="White"/>
        <TextBox x:Name="txtDisponibilite" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,10,0" Width="200" Background="Black" Foreground="White" BorderBrush="Yellow"/>

        <!-- Champ pour l'ID du type de chambre -->
        <Label Content="Type de Chambre ID :" Grid.Row="2" HorizontalAlignment="Left" Margin="10,10,0,0" Foreground="White"/>
        <TextBox x:Name="txtTypeChambreId" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,10,0" Width="200" Background="Black" Foreground="White" BorderBrush="Yellow"/>

        <!-- Bouton Ajouter -->
        <Button x:Name="btnAjouter" Content="Ajouter" Grid.Row="3" HorizontalAlignment="Center" Margin="0,20,0,0" Width="100" Background="Yellow" Foreground="Black" Click="btnAjouter_Click"/>
    </Grid>
</Window>