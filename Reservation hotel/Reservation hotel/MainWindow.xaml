<Window x:Class="Reservation_hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luxury Hotel Management"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<!-- Style pour le bouton de connexion -->
		<LinearGradientBrush x:Key="GoldButtonBrush" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#FFD700" Offset="0"/>
			<GradientStop Color="#DAA520" Offset="1"/>
		</LinearGradientBrush>

		<Style x:Key="LuxuryButton" TargetType="Button">
			<Setter Property="Background" Value="{StaticResource GoldButtonBrush}"/>
			<Setter Property="Foreground" Value="#1A1A1A"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                BorderThickness="1"
                                BorderBrush="#80FFFFFF">
							<Border.Effect>
								<DropShadowEffect BlurRadius="15"
                                                ShadowDepth="5"
                                                Opacity="0.3"/>
							</Border.Effect>
							<ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background">
						<Setter.Value>
							<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
								<GradientStop Color="#DAA520" Offset="0"/>
								<GradientStop Color="#B8860B" Offset="1"/>
							</LinearGradientBrush>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid>
		<!-- Image de fond -->
		<Image Source="./img1.PNG"
               Stretch="UniformToFill"/>

		<!-- Overlay avec dégradé -->
		<Rectangle>
			<Rectangle.Fill>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="#CC000000" Offset="0"/>
					<GradientStop Color="#99000000" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>

		<!-- Conteneur principal -->
		<Border Width="400"
                Margin="20"
                BorderThickness="1"
                CornerRadius="20">
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="#CC1A1A1A" Offset="0"/>
					<GradientStop Color="#CC2C3E50" Offset="1"/>
				</LinearGradientBrush>
			</Border.Background>
			<Border.Effect>
				<DropShadowEffect BlurRadius="20"
                                ShadowDepth="0"
                                Opacity="0.5"/>
			</Border.Effect>

			<StackPanel VerticalAlignment="Center"
                        Margin="30">
				<!-- Titre -->
				<TextBlock Text="LUXURY"
                           FontSize="16"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           Foreground="#FFD700"/>
				<TextBlock Text="HOTEL MANAGEMENT"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"
                           Foreground="White"/>

				<!-- Zone de saisie -->
				<Border Background="#26FFFFFF"
                        CornerRadius="15"
                        Padding="20"
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        Margin="0,0,0,30">
					<StackPanel>
						<TextBlock Text="Code d'accès"
                                 Margin="0,0,0,10"
                                 Foreground="#FFD700"
                                 FontWeight="Medium"/>
						<TextBox x:Name="CodeInpute"
                                Height="45"
                                Padding="15,0"
                                FontSize="16"
                                VerticalContentAlignment="Center"
                                Background="#1AFFFFFF"
                                Foreground="White"
                                BorderBrush="#40FFFFFF"
                                BorderThickness="1"
                                CaretBrush="White">
							<TextBox.Resources>
								<Style TargetType="TextBox">
									<Style.Triggers>
										<Trigger Property="IsFocused" Value="True">
											<Setter Property="Background" Value="#33FFFFFF"/>
										</Trigger>
									</Style.Triggers>
								</Style>
							</TextBox.Resources>
						</TextBox>
					</StackPanel>
				</Border>

				<!-- Bouton de connexion -->
				<Button Content="ACCÉDER"
                        Height="50"
                        Style="{StaticResource LuxuryButton}"
                        Click="Button_Click"
                        Margin="0,0,0,30"/>

				<!-- Message d'aide -->
				<TextBlock TextAlignment="Center"
                           Foreground="#CCCCCC"
                           LineHeight="24">
					<Run Text="Enter your code"/>
					<LineBreak/>
					
				</TextBlock>
			</StackPanel>
		</Border>
	</Grid>
</Window>