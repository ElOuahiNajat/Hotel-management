    }

    .carousel-indicators button {
        background-color: rgba(255, 215, 0, 0.5); /* Gold indicators */
    }

    .carousel-indicators .active {
        background-color: #ffd700; /* Active indicator */
    }

    /* Back to Top Button */
    #backToTopBtn {
        display: none; /* Hidden by default */
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 99;
        border: none;
        outline: none;
        background: linear-gradient(135deg, #ffd700, #ffffff); /* Gold to white gradient */
        color: #1a1a1a; /* Dark text */
        cursor: pointer;
        padding: 15px;
        border-radius: 50%;
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3); /* Gold shadow */
