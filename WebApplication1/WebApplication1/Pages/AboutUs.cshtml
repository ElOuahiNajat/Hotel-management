            transform: translateY(-5px);
            color: #ffd700; /* Gold color on hover */
        }

    /* Carousel Custom Styles */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(255, 215, 0, 0.5); /* Gold background for controls */
