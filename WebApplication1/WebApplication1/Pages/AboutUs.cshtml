            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.5); /* Enhanced shadow on hover */
        }

    /* Navigation Bar Styles */
    .navbar {
        padding: 1rem 0;
        transition: all 0.3s ease;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
    }

